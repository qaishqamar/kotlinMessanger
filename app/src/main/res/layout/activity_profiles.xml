    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userPic_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/profile_pic"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo_pic_profile"
        android:layout_width="76dp"
        android:layout_height="71dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="124dp"
        android:src="@mipmap/photo_pic_icon_round"
        app:civ_border_color="@android:color/white"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="240dp"
        android:layout_height="24dp"
        android:layout_marginTop="48dp"
        android:paddingLeft="5dp"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/userPic_profile"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/userPic_profile"
        app:layout_constraintTop_toBottomOf="@+id/userPic_profile" />

    <TextView
        android:id="@+id/userName_profille"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:padding="5dp"
        android:text="Qamar Anwar"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <View
        android:id="@+id/name_barrier"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
