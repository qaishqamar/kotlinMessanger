    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editing_layout_prof"
        android:layout_width="396dp"
        android:visibility="gone"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_view_etg_lay"
            android:layout_width="265dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="5dp"
            android:text="Name"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_text_etg_lay"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:padding="6dp"
            android:paddingLeft="5dp"
            android:text="Editting name"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/text_view_etg_lay"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/text_view_etg_lay"
            app:layout_constraintTop_toBottomOf="@+id/text_view_etg_lay"
            app:layout_constraintVertical_bias="0.194" />

        <TextView
