        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name_barrier"
        app:layout_constraintTop_toBottomOf="@+id/name_barrier" />

    <TextView
        android:id="@+id/email_id_profile"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:text="jhgelwug244gers.gmail.com"
        android:textSize="18sp"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/email_id_pro_i"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_id_pro_i"
        app:layout_constraintTop_toBottomOf="@+id/email_id_pro_i" />

    <View
        android:id="@+id/email_barrier"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/email_id_profile"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_id_profile"
        app:layout_constraintTop_toBottomOf="@+id/email_id_profile" />

    <TextView
        android:id="@+id/about_pro_i"
        android:layout_width="240dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:text="About"
        app:layout_constraintEnd_toEndOf="@+id/email_barrier"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_barrier"
        app:layout_constraintTop_toBottomOf="@+id/email_barrier" />

    <TextView
        android:id="@+id/about_profile"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:text="A good listenner"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/about_pro_i"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="@+id/about_pro_i"
        app:layout_constraintTop_toBottomOf="@+id/about_pro_i" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPic_profile"
        app:srcCompat="@drawable/person_icon"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/email_id_pro_i"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/email_icon"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toStartOf="@+id/about_pro_i"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/error_about_icon"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/name_edit_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:srcCompat="@drawable/edit_icon"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/email_edit_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/email_id_pro_i"
        app:layout_constraintTop_toTopOf="@+id/email_id_pro_i"
        app:srcCompat="@drawable/edit_icon"
        tools:ignore="VectorDrawableCompat" />


    <ImageView
        android:id="@+id/about_edit_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/about_pro_i"
        app:layout_constraintTop_toTopOf="@+id/about_pro_i"
        app:srcCompat="@drawable/edit_icon"
        tools:ignore="VectorDrawableCompat"
        android:layout_marginEnd="16dp"/>

